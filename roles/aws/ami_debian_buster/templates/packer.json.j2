{
  "variables": 
  {
    "aws_profile": "{{ ami_debian_buster.aws_profile }}"
  },
  "builders": 
  [
    {
      "type": "amazon-ebs",
      "region": "{{ ami_debian_buster.region }}",
      "instance_type": "{{ ami_debian_buster.instance_type }}",
      "ssh_username": "admin",
      "ami_name": "{{ ami_debian_buster.ami_name }}",
      "associate_public_ip_address": true,
      "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "debian-10-amd64-*",
        "root-device-type": "ebs"
      },
      "owners": ["136693071363"],
      "most_recent": true
    },
    "tags": 
      {
      "Name": "{{ ami_debian_buster.ami_name }}"
      }
    }
  ],
  "provisioners": [{
      "type": "ansible",
      "playbook_file": "{{ ami_debian_buster.playbook_file }}",
      "extra_arguments": 
			[ 
				"--extra-vars", 
				"{ _ansible_provision_base_dir: {{ _ansible_provision_base_dir }}, _ansible_provision_build_dir: {{ _ansible_provision_build_dir }}, _ansible_provision_build_tmp_dir: {{ _ansible_provision_build_tmp_dir }}, _ansible_provision_data_dir: {{ _ansible_provision_data_dir }}, _ansible_provision_build_id: {{ _ansible_provision_build_id }}, _ansible_provision_force_play: yes}"
			 ]
  }]
}