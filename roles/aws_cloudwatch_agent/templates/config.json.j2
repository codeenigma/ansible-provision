{
	"agent": {
		"metrics_collection_interval": 60,
		"run_as_user": "cwagent"
	},
	"logs": {
		"logs_collected": {
			"files": {
				"collect_list": [
					{
						"file_path": "/var/log/syslog",
						"log_group_name": "syslog",
						"log_stream_name": "{{ aws_cloudwatch_agent.log_stream_name }}"
					},
					{
						"file_path": "/var/log/auth.log",
						"log_group_name": "auth",
            "log_stream_name": "{{ aws_cloudwatch_agent.log_stream_name }}"
					},
					{
						"file_path": "/var/log/daemon.log",
						"log_group_name": "daemon",
            "log_stream_name": "{{ aws_cloudwatch_agent.log_stream_name }}"
					},
					{
						"file_path": "/var/log/messages",
						"log_group_name": "messages",
            "log_stream_name": "{{ aws_cloudwatch_agent.log_stream_name }}"
					},
					{
						"file_path": "/var/log/alternatives.log",
						"log_group_name": "alternatives",
            "log_stream_name": "{{ aws_cloudwatch_agent.log_stream_name }}"
					}
				]
			}
		}
	},
	"metrics": {
{% if aws_cloudwatch_agent.metrics_namespace is defined and aws_cloudwatch_agent.metrics_namespace|length %}
    "namespace": "MyCustomNamespace",
{% endif %}  
		"append_dimensions": {
			"AutoScalingGroupName": "${aws:AutoScalingGroupName}",
			"ImageId": "${aws:ImageId}",
			"InstanceId": "${aws:InstanceId}",
			"InstanceType": "${aws:InstanceType}"
		},
		"metrics_collected": {
			"cpu": {
				"measurement": [
					"cpu_usage_idle",
					"cpu_usage_iowait",
					"cpu_usage_user",
					"cpu_usage_system"
				],
				"metrics_collection_interval": 60,
				"totalcpu": false
			},
			"disk": {
				"measurement": [
					"used_percent",
					"inodes_free"
				],
				"metrics_collection_interval": 60,
				"resources": [
					"*"
				]
			},
			"diskio": {
				"measurement": [
					"io_time"
				],
				"metrics_collection_interval": 60,
				"resources": [
					"*"
				]
			},
			"mem": {
				"measurement": [
					"mem_used_percent"
				],
				"metrics_collection_interval": 60
			},
			"swap": {
				"measurement": [
					"swap_used_percent"
				],
				"metrics_collection_interval": 60
			}
		}
	}
}